<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SimulatorGUI">

    <!-- Animation StackPane -->
    <StackPane fx:id="animationPane" layoutX="243.0" layoutY="5.0" prefHeight="604.0" prefWidth="1200.0" />

    <!-- Labels -->
    <Label fx:id="timeLabel" layoutX="22.0" layoutY="24.0" text="Time:" />
    <Label fx:id="delayLabel" layoutX="20.0" layoutY="60.0" text="Delay:" />
    <Label fx:id="resultLabel" layoutX="20.0" layoutY="100.0" text="Result:" />

    <!-- TextFields -->
    <TextField fx:id="time" layoutX="67.0" layoutY="20.0" prefWidth="100.0" />
    <TextField fx:id="delay" layoutX="67.0" layoutY="56.0" prefWidth="100.0" />

    <!-- Result Label -->
    <Label fx:id="results" layoutX="100.0" layoutY="100.0" prefWidth="200.0" />

    <!-- Spinners for line counts -->
    <Label layoutX="13.0" layoutY="133.0" text="Check-in:" />
    <Spinner fx:id="checkInSpinner" layoutX="73.0" layoutY="129.0" prefWidth="80.0" />

    <Label layoutX="13.0" layoutY="168.0" text="Luggage:" />

    <Label layoutX="12.0" layoutY="204.0" text="Lugg. Pri.:" />
    <Spinner fx:id="luggageDropPrioritySpinner" layoutX="73.0" layoutY="200.0" prefWidth="80.0" />

    <Label layoutX="15.0" layoutY="238.0" text="Security:" />
    <Spinner fx:id="securitySpinner" layoutX="73.0" layoutY="234.0" prefWidth="80.0" />

    <Label layoutX="16.0" layoutY="276.0" prefHeight="18.0" prefWidth="46.0" text="Sec. Pri.:" />
    <Spinner fx:id="securityPrioritySpinner" layoutX="73.0" layoutY="272.0" prefWidth="80.0" />

    <Label layoutX="15.0" layoutY="311.0" text="Passport:" />
    <Spinner fx:id="passportSpinner" layoutX="73.0" layoutY="307.0" prefWidth="80.0" />

    <Label layoutX="15.0" layoutY="348.0" text="Pass. Pri.:" />
    <Spinner fx:id="passportPrioritySpinner" layoutX="72.0" layoutY="344.0" prefWidth="80.0" />

    <Label layoutX="15.0" layoutY="387.0" text="Gate:" />
    <Spinner fx:id="gateSpinner" layoutX="73.0" layoutY="383.0" prefWidth="80.0" />

    <!-- Buttons -->
    <Button fx:id="startButton" layoutX="66.0" layoutY="485.0" prefHeight="26.0" prefWidth="46.0" text="Start" />
    <Button fx:id="slowButton" layoutX="129.0" layoutY="525.0" text="Slow Down" />
    <Button fx:id="speedUpButton" layoutX="129.0" layoutY="485.0" prefHeight="26.0" prefWidth="75.0" text="Speed Up" />
    <Button fx:id="resetButton" layoutX="67.0" layoutY="525.0" text="Reset" />
    <Spinner fx:id="luggageDropSpinner" layoutX="73.0" layoutY="164.0" prefWidth="80.0" />
</AnchorPane>
