<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SimulatorGUI"
            prefHeight="600.0" prefWidth="1200.0">

    <!-- Labels -->
    <Label fx:id="timeLabel" text="Time:" layoutX="20.0" layoutY="20.0"/>
    <Label fx:id="delayLabel" text="Delay:" layoutX="20.0" layoutY="60.0"/>
    <Label fx:id="resultLabel" text="Result:" layoutX="20.0" layoutY="100.0"/>

    <!-- TextFields -->
    <TextField fx:id="time" layoutX="100.0" layoutY="20.0" prefWidth="100.0"/>
    <TextField fx:id="delay" layoutX="100.0" layoutY="60.0" prefWidth="100.0"/>

    <!-- Result Label -->
    <Label fx:id="results" layoutX="100.0" layoutY="100.0" prefWidth="200.0"/>

    <!-- Buttons -->
    <Button fx:id="startButton" text="Start" layoutX="20.0" layoutY="150.0"/>
    <Button fx:id="slowButton" text="Slow Down" layoutX="100.0" layoutY="150.0"/>
    <Button fx:id="speedUpButton" text="Speed Up" layoutX="220.0" layoutY="150.0"/>

    <!-- Animation StackPane -->
    <StackPane fx:id="animationPane" layoutX="350.0" layoutY="20.0"
               prefWidth="1200.0" prefHeight="600.0"/>
</AnchorPane>
