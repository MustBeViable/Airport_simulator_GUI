      <font>
         <Font size="20.0" />
      </font></Button>
    <Spinner fx:id="luggageDropSpinner" layoutX="134.0" layoutY="195.0" prefHeight="30.0" prefWidth="90.0" />
   <Button layoutX="67.0" layoutY="618.0" mnemonicParsing="false" onAction="#showResults" prefHeight="30.0" prefWidth="90.0" text="Results">
