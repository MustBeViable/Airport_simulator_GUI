      <font>
         <Font size="20.0" />
      </font></Label>
    <Spinner fx:id="passportPrioritySpinner" layoutX="134.0" layoutY="398.0" prefHeight="30.0" prefWidth="90.0" />

    <Label layoutX="16.0" layoutY="437.0" text="Gate:">
      <font>
         <Font size="20.0" />
      </font></Label>
    <Spinner fx:id="gateSpinner" layoutX="134.0" layoutY="437.0" prefHeight="30.0" prefWidth="90.0" />

    <!-- Buttons -->
    <Button fx:id="startButton" layoutX="23.0" layoutY="501.0" prefHeight="43.0" prefWidth="89.0" text="Start">
      <font>
         <Font size="20.0" />
      </font></Button>
    <Button fx:id="slowButton" layoutX="116.0" layoutY="562.0" prefHeight="43.0" prefWidth="126.0" text="Slow Down">
      <font>
         <Font size="20.0" />
      </font></Button>
    <Button fx:id="speedUpButton" layoutX="116.0" layoutY="501.0" prefHeight="43.0" prefWidth="126.0" text="Speed Up">
      <font>
         <Font size="20.0" />
